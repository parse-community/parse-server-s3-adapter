{
    "root": true,
    "extends": "airbnb-base",
    "env": {
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "no-trailing-spaces": 2,
        "eol-last": 2,
        "space-in-parens": ["error", "never"],
        "no-multiple-empty-lines": 1,
        "no-underscore-dangle": 0,
        "no-new": 0,
        "prefer-destructuring": 0,
        "prefer-object-spread": 0
    }
}
